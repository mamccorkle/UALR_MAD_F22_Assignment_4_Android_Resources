<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/app_theme_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.LongText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/app_theme_long_text_text_size</item>
        <item name="android:lineHeight">@dimen/app_theme_long_text_line_height</item>
    </style>

    <style name="AppTheme.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/button_color</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingStart">@dimen/app_theme_button_paddingStart</item>
        <item name="android:paddingEnd">@dimen/app_theme_button_padding_end</item>
    </style>

</resources>
